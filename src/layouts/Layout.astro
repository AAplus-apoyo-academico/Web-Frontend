---
import { SEO } from "astro-seo";
import Footer from "@components/Footer.astro";
import Navbar from "@components/navbar/Navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import WhatsAppIcon from "@components/ui/icons/WhatsApp.astro";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const siteName = "AAplus";

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + siteName
  : `${siteName} - Tu éxito es nuestra misión`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/aaplus-logo-short.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description=`${siteName} Tu éxito es nuestra misión.`
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `${siteName} - Starter Template for Astro`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: `${siteName} Homepage Screenshot`,
        },
      }}
    />
  </head>
  <body
    class="dark:text-white relative h-full bg-[radial-gradient(circle_500px_at_50%_200px,#d1ecff,transparent)] dark:bg-[radial-gradient(circle_500px_at_50%_200px,#4d7a9b,transparent)] dark:bg-gray-700">
    <Navbar />
    <slot />
    <a
      href="https://wa.me/593978621123/"
      target="_blank"
      class="fixed bottom-4 right-4 p-4 bg-[#25d366] rounded-full animate-bounce hover:animate-none transition-all">
      <WhatsAppIcon size="8" color="white" />
    </a>
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"
    ></script>
  </body>
</html>
