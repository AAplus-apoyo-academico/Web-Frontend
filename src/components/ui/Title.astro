---
const {
  title,
  tag: Tag = "h1",
  margin = "mb-4",
  size = "xl",
  boldLevel = "extrabold",
  colorLigth = "black",
  colorDark = "white",
  extraClassName,
  ...extraProps
} = Astro.props;
---

<Tag
  class=`${margin} text-${size} tracking-tight font-${boldLevel} text-${colorLigth} dark:text-${colorDark} ${extraClassName || ''}`
  {...extraProps}>
  <slot name="before" />
  <span>{title}</span>
  <slot name="after" />
</Tag>
